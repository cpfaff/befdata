= form_tag controller: 'datasets', action: 'batch_update_columns' do
  %table
    %thead
      %tr
        %th Header
        %th Datagroup
        %th Datatype
    %tbody
      -@dataset.datacolumns.includes(:datagroup).each do |c|
        = hidden_field_tag "datacolumn[][id]", c.id
        %tr.pb-1
