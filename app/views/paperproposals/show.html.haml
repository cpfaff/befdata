      // section info
      - if current_user
        - if may_administrate_paperproposals? || is_paperproposal_author?
          - if @paperproposal.lock
            .border-top.border-right.border-left.rounded.top-2.pb-1
              %span{'data-toggle': 'tooltip', title: 'Info section', 'data-placement': 'auto'}
